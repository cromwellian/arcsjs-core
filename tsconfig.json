{
  "exclude": [
    "./pkg/*.ts",
    "./pkg/js/**/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "rootDir": "./pkg/ts",
    "outDir": "./pkg/js",
    "declaration": true
  },
  "typedocOptions": {
    "entryPoints": ["./pkg/ts"],
    "out": "./docs",
    "name": "ArcsJs"
  }
}
